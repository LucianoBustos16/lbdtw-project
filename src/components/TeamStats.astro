---
import { findLeaderboardBy } from "@services/leaderboard";

const { teamId } = Astro.props

const {team, rank, points, matchesPlayed, matchesWon, matchesDrawn, matchesLost, goalsFor, goalsAgainst, goalDifference} =
    await findLeaderboardBy ({teamId})

const stats = [
    {
        title: 'Clasificaci√≥n',
        value: rank
    },
    {
        title: 'Puntos',
        value: points
    },
    {
        title: 'Partidos Jugados',
        value: matchesPlayed
    },
    {
        title: 'Partidos Ganados',
        value: matchesWon
    },
    {
        title: 'Partidos Empatados',
        value: matchesDrawn
    },
    {
        title: 'Partidos Perdidos',
        value: matchesLost
    },
    {
        title: 'Goles a Favor',
        value: goalsFor
    },
    {
        title: 'Goles en Contra',
        value: goalsAgainst
    },
    {
        title: 'Diferencia de Goles',
        value: goalDifference
    },
]
---

<section class="p-4 bg-gray-800 rounded-lg">
    {
        stats.map((stat) => (
            <div class="flex justify-between items-center mb-2">
                <h4 class="text-yellow-500 uppercase font-bold "> {stat.title}</h4>
                <strong class="text-4xl font-bold text-white">{stat.value}</strong>
            </div>
        ))
    }
</section>

