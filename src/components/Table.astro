---
const response = await fetch( 'https://api.lbdtwplus.com.ar/leaderboard' );
const leaderboard = await response.json();
---
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-2 py-3">
                    Pos
                </th>
                <th scope="col" class="px-2 py-3">
                    Equipo
                </th>
                <th scope="col" class="px-2 py-3">
                    Pts.
                </th>
                <th scope="col" class="px-2 py-3">
                    PJ
                </th>
                <th scope="col" class="px-2 py-3">
                    PG
                </th>
                <th scope="col" class="px-2 py-3">
                    PE
                </th>
                <th scope="col" class="px-2 py-3">
                    PP
                </th>
                <th scope="col" class="px-2 py-3">
                    GF
                </th>
                <th scope="col" class="px-2 py-3">
                    GC
                </th>
                <th scope="col" class="px-2 py-3">
                    Dif.
                </th>
            </tr>
        </thead>
        <tbody>

            {leaderboard.map(({ team, rank, points, matchesPlayed, matchesWon, matchesDrawn, matchesLost, goalsFor, goalsAgainst, goalDifference }) => (
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <th scope="row" class="px-2 py-4 font-bold text-teal-600">
                    <div class="font-normal text-gray-500">{rank}</div>
                </th>
                <th scope="row" class="flex gap-1 items-center px-2 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                    <img src={team.image} alt="Escudo de ${team.name}" class=" w-6">
                    <div class="text-base font-bold hidden md:block">{team.name}</div>
                    <div class="text-base font-bold md:hidden">{team.shortName}</div>
                </th>
                <th scope="row" class="px-2 py-4 font-bold text-teal-600">
                    {points}
                </th>
                <th scope="row" class="font-normal px-2 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                    {matchesPlayed}
                </th>
                <th scope="row" class="font-normal px-2 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                    {matchesWon}
                </th>
                <th scope="row" class="font-normal px-2 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                    {matchesDrawn}
                </th>
                <th scope="row" class="font-normal px-2 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                    {matchesLost}
                </th>
                <th scope="row" class="font-normal px-2 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                    {goalsFor}
                </th>
                <th scope="row" class="font-normal px-2 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                    {goalsAgainst}
                </th>
                <th scope="row" class="font-normal px-2 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                    {goalDifference}
                </th>
            </tr>
            ))}


        </tbody>
    </table>
</div>
