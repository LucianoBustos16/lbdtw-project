---
const { local, visitant, date, timestamp } = Astro.props

const d = new Date(timestamp)
        const hour = d.toLocaleTimeString('es-AR', {
            hour12: false,
            hour: '2-digit'
        })
        const minutes = d.getMinutes().toString().padStart(2, '0');
       const dateToRender = `${hour}:${minutes}`
---

	<div class="shadow-md p-4 rounded-xl bg-white">

			<div class="grid items-center gap-4" style="grid-template-columns: 1fr auto 1fr;">
				
				<a href={`/equipos/${local.id}`} class="flex gap-1 items-center group transition-all justify-end hover:scale-105">
					
					<p class="text-right font-semibold">
						{local.name}	
					</p>

					<img
				class='h-8 object-contain my-2'
				src={`https://api.lbdtwplus.com.ar/static/logos/${local.id}.webp`}
				alt={`Escudo del equipo ${local.name}`}
			/>	
				</a>
				
				<div class='text-center rounded-sm p-2'>
					<p class="text-gray-400 uppercase text-sm">{date}</p>
					<p class="text-[#0598D1] text-xl">{dateToRender}</p>
					
		
				</div>
				
				<a href={`/equipos/${visitant.id}`} class="flex gap-1 items-center group transition-all hover:scale-105">
					
					<img
				class='h-8 object-contain'
				src={`https://api.lbdtwplus.com.ar/static/logos/${visitant.id}.webp`}
				alt={`Escudo del equipo ${visitant.name}`}
				/>
					<p class="text-left font-semibold">
						{visitant.name}	
					</p>
					
				</a>

			</div>

	</div>