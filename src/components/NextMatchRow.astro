---
const { local, score, visitant, date, hour } = Astro.props

const fecha = `${hour} ${date}`

---

	<div class="shadow-md p-4 rounded-xl">

			<div class="grid items-center gap-4" style="grid-template-columns: 1fr auto 1fr;">
				
				<a href={`/equipos/${local.id}`} class="flex gap-1 items-center group transition-all justify-end hover:scale-110">
					
					<p class="text-right font-semibold">
						{local.name}	
					</p>

					<img
				class='h-8 object-contain my-2'
				src={`https://api.lbdtwplus.com.ar/static/logos/${local.id}.webp`}
				alt={`Escudo del equipo ${local.name}`}
			/>	
				</a>
				
				<p class='text-center text-xs bg-gray-200 rounded-sm p-2'>
					{ score.includes("-") ? score : fecha }
		
				</p>
				
				<a href={`/equipos/${visitant.id}`} class="flex gap-1 items-center group transition-all hover:scale-110">
					
					<img
				class='h-8 object-contain'
				src={`https://api.lbdtwplus.com.ar/static/logos/${visitant.id}.webp`}
				alt={`Escudo del equipo ${visitant.name}`}
				/>
					<p class="text-left font-semibold">
						{visitant.name}	
					</p>
					
				</a>

			</div>

	</div>