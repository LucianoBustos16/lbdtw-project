---
const { local, visitant, hour, localScore } = Astro.props
---

	<div class="shadow-md p-4 rounded-xl bg-white">

			<div class="grid items-center gap-4" style="grid-template-columns: 1fr auto 1fr;">
				
			
					<p class="text-right font-semibold">
						{local.name}	
					</p>

					<img
				class='h-8 object-contain my-2'
				src={`${local.localImg}`}
				alt={`Escudo del equipo ${local.name}`}
			/>	

				
				<div class='text-center rounded-sm p-2'>
					<p class="text-gray-400 uppercase text-sm">{hour}</p>	
				</div>
				
								
					<img
				class='h-8 object-contain'
				src={`${visitant.visitantImg}`}
				alt={`Escudo del equipo ${visitant.name}`}
				/>
					<p class="text-left font-semibold">
						{visitant.name}	
					</p>
					

			</div>

	</div>