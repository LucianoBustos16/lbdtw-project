---
import Layout from '@layouts/Layout.astro';

const response  = await fetch('https://www.gamerpower.com/api/giveaways')
const games = await response.json()
---

<Layout title="LBDTw Free Games">

	<nav class="container m-auto">
		<ul>
			<li><a href="/"> Inicio</a></li>
			<li><a href="/"> PC</a></li>
			<li><a href="/"> Steam</a></li>
			<li><a href="/"> Epic Games Store</a></li>
			<li><a href="/"> itch.io</a></li>
			<li><a href="/"> Xbox One</a></li>
			<li><a href="/"> GOG</a></li>
			<li><a href="/"> PS4</a></li>
			<li><a href="/"> Nintendo</a></li>
			<li><a href="/"> Android</a></li>
			<li><a href="/"> iOS</a></li>
			<li><a href="/"> DRM-Free</a></li>

		</ul>
	</nav>
	<div class="container m-auto">

		<section class=" grid-flow-row ">

			{games.map(({id, thumbnail, title }) => (
				<a href={`/game/${id}`}>
					<img class="aspect-square me-4" src={thumbnail} alt={`Imagen de ${title}`}>
					<h2 class=" text-4xl">{title}</h2>				
				</a>
			))}

		</section>

	</div>
</Layout>

